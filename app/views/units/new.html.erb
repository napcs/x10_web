<div data-role="header">
  <h1>New unit</h1>
  <%= link_to 'Units', units_url, "class" => "ui-btn-right" %>
</div>

<div data-role="content">
  <%= form_for @unit do |f| %>
   <p>
     <%=f.label :name %>
     <%=f.text_field :name %>
   </p>
   <p>
     <%=f.label :code %>
     <%=f.text_field :code %>
   </p>
   <p>
     <%=f.label :position %>
     <%=f.text_field :position %>
   </p>

    <%=f.submit %>
  <% end %>
</div>
